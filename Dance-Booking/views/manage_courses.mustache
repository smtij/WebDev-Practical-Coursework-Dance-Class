<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>{{title}}</title>
  <!-- Bootstrap CSS CDN -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <!-- Header with title and Add Course button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>{{title}}</h1>
      <a href="/admin/add-course" class="btn btn-primary">Add Course</a>
    </div>
    
    <!-- Course Cards -->
    {{#courses}}
      <div class="card mb-3">
        <div class="card-body">
          <h2 class="card-title">{{name}}</h2>
          <p class="card-text"><strong>Duration:</strong> {{duration}}</p>
          <p class="card-text">{{description}}</p>
          <div class="d-flex justify-content-between">
            <a href="/admin/edit-course/{{_id}}" class="btn btn-outline-secondary">Edit Course</a>
            <form action="/admin/delete-course/{{_id}}" method="POST" onsubmit="return confirm('Are you sure you want to delete this course?');">
              <button type="submit" class="btn btn-danger">Delete Course</button>
            </form>
            <a href="/admin/registrations/{{_id}}" class="btn btn-info">View Registrations</a>
          </div>
        </div>
      </div>
    {{/courses}}
    
    <!-- Back to Dashboard Button -->
    <div class="text-center">
      <a href="/admin/dashboard" class="btn btn-secondary">Back to Dashboard</a>
    </div>
  </div>
  
  <!-- Optional: Bootstrap JS and dependencies -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
