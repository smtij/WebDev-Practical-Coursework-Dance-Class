<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>{{title}}</title>
  <!-- Bootstrap CSS CDN -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    /* Optionally, you can add custom CSS for dashed border */
    .dashed-border {
      border: 1px dashed #999;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <div class="card">
      <div class="card-header text-center">
        <h1>{{title}}</h1>
      </div>
      <div class="card-body">
        <form action="/admin/edit-course/{{course._id}}" method="POST">
          <div class="form-group">
            <label for="name">Course Name:</label>
            <input type="text" id="name" name="name" class="form-control" value="{{course.name}}" required>
          </div>
          <div class="form-group">
            <label for="duration">Duration:</label>
            <input type="text" id="duration" name="duration" class="form-control" value="{{course.duration}}" required>
          </div>
          <div class="form-group">
            <label for="description">Description:</label>
            <textarea id="description" name="description" rows="5" class="form-control" required>{{course.description}}</textarea>
          </div>
          <h2 class="mt-4">Classes</h2>
          <!-- Loop over existing classes -->
          {{#course.classes}}
            <div class="border p-3 mb-3">
              <div class="form-group">
                <label>Class Name:</label>
                <input type="text" name="className" class="form-control" value="{{className}}">
              </div>
              <div class="form-group">
                <label>Date:</label>
                <input type="date" name="date" class="form-control" value="{{date}}">
              </div>
              <div class="form-group">
                <label>Time:</label>
                <input type="time" name="time" class="form-control" value="{{time}}">
              </div>
              <div class="form-group">
                <label>Location:</label>
                <input type="text" name="location" class="form-control" value="{{location}}">
              </div>
              <div class="form-group">
                <label>Price:</label>
                <input type="number" name="price" class="form-control" value="{{price}}" step="0.01">
              </div>
            </div>
          {{/course.classes}}
          
          <!-- Section for adding a new class (optional) -->
          <h3 class="mt-4">Add New Class (optional):</h3>
          <div class="dashed-border p-3 mb-3">
              <div class="form-group">
                <label>Class Name:</label>
                <input type="text" name="className" class="form-control">
              </div>
              <div class="form-group">
                <label>Date:</label>
                <input type="date" name="date" class="form-control">
              </div>
              <div class="form-group">
                <label>Time:</label>
                <input type="time" name="time" class="form-control">
              </div>
              <div class="form-group">
                <label>Location:</label>
                <input type="text" name="location" class="form-control">
              </div>
              <div class="form-group">
                <label>Price:</label>
                <input type="number" name="price" class="form-control" step="0.01">
              </div>
          </div>
          <button type="submit" class="btn btn-primary">Update Course</button>
        </form>
      </div>
      <div class="card-footer text-center">
        <a href="/admin/manage-courses" class="btn btn-secondary">Back to Manage Courses</a>
      </div>
    </div>
  </div>
  
  <!-- Optional: Bootstrap JS and dependencies -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
